{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "sourceRoot": "./src",
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"],
  "exclude": [
    "files",
    "node_modules"
  ]
}
