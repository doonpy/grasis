{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "incremental": true,
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "typeRoots": [
      "./types/",
      "./node_modules/@types/"
    ]
  },
  "exclude": [
    "files",
    "node_modules",
    "dist"
  ],
  "include": [
    "src",
    "types"
  ]
}
