{
  "name": "grasis-api",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "12.x",
    "npm": "6.x"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "afterbuild": "node afterbuild",
    "build": "nest build && npm run afterbuild",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node ./dist/main",
    "install:dependencies": "npm i",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "typeorm:staging": "DB_TYPE=staging node --require ts-node/register ./node_modules/typeorm/cli.js",
    "typeorm:migrate": "npm run typeorm -- migration:run",
    "typeorm:revert": "npm run typeorm -- migration:revert",
    "typeorm:sync-local": "npm run typeorm -- schema:sync -f src/orm-configs/local.ts",
    "typeorm:sync-dev": "npm run typeorm -- schema:sync -f src/orm-configs/dev.ts",
    "typeorm:sync-prod": "npm run typeorm -- schema:sync -f src/orm-configs/prod.ts"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/jwt": "^7.1.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/typeorm": "^7.1.4",
    "chalk": "^4.1.0",
    "morgan": "^1.10.0",
    "mssql": "^6.2.3",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "typeorm": "^0.2.28"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.2",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.8",
    "@types/hapi__joi": "^17.1.5",
    "@types/jest": "25.2.3",
    "@types/morgan": "^1.9.1",
    "@types/multer": "^1.4.4",
    "@types/node": "^13.13.18",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "jest": "26.0.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
